<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="false"
    android:focusable="false"
    style="?detailBackground">
    
    <!-- 헤더 layout -->
    <include android:id="@+id/layout_header" 
        layout="@layout/include_board_detail_head" />
    
    <!-- 컨텐츠 layout -->
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="8.6dp"
	    android:paddingRight="8.6dp">
        
        <com.hkh.korealocal114.views.CustomImageView 
	        android:id="@+id/imageview"
	    	android:layout_width="match_parent"
		    android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
		    android:clickable="true"
		    android:longClickable="true"
	        android:visibility="gone"/>
        
        <TextView 
            android:id="@+id/textview"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textIsSelectable="true"
		    android:visibility="gone"
		    android:textSize="15sp"
		    style="?detailContentColor"
		    />
        
    </FrameLayout>
</LinearLayout><!-- From: file:/D:/github.android/KoreaLocal114/koreaLocal114/src/main/res/layout/list_item_post.xml -->