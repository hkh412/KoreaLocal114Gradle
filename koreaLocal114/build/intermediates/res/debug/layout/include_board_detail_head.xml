<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:paddingLeft="8.6dp"
	 android:paddingRight="8.6dp"
	 android:paddingTop="5.6dp"
     android:paddingBottom="5.6dp"
     android:orientation="vertical">
    
     <LinearLayout
     	android:layout_width="match_parent"
     	android:layout_height="wrap_content"
   	    android:gravity="center_vertical"
     	android:orientation="horizontal">
         
		<TextView
		    android:id="@+id/tv_city_detail"
		    android:layout_width="40dp"
		    android:layout_height="25dp"
		    android:layout_gravity="center"
		    android:layout_marginRight="5dp"
		    android:gravity="center"
		    android:text="한국"
		    android:textColor="#ffffff"
		    android:textSize="13sp"
		    android:maxLines="1"
		    android:background="@drawable/round_rect_orange"
	   		/>
	    
	    <LinearLayout 
	      	android:layout_width="0dp"
	  		android:layout_height="wrap_content"
	  		android:layout_weight="1"
	  		android:orientation="vertical">
	  		
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
           	    <LinearLayout 
			      	android:layout_width="0dp"
			  		android:layout_height="wrap_content"
			  		android:layout_weight="1"
			  		android:orientation="vertical">
			  		
	            <TextView 
			  		android:id="@+id/tv_board_cont_title"
				   	android:layout_width="wrap_content"
				   	android:layout_height="wrap_content"
				   	android:textIsSelectable="true"
			       	android:textSize="17sp"
			       	android:textStyle="bold"
				   	android:text="XG 그랜져"
				   	style="?detailHeadTitleColor"
				   	/>
			 	
			 	<TextView 
		            android:id="@+id/tv_detail_category"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:maxLines="1"
		        	android:maxWidth="250dp"
		        	android:ellipsize="end"
		        	android:text="서울 중구 판매유통"
		        	android:textSize="13.3sp"
		        	style="?detailHeadAuthorColor"
		            />
		  		</LinearLayout>
		 		<include layout="@layout/include_favorite_button"
		    		android:id="@+id/tgb_detail_favorite" />
	        </LinearLayout>
		 	
		 	
		 	<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">
			    
		        <!-- 작성일 -->
		        <TextView
		            android:id="@+id/tv_board_cont_date"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:textIsSelectable="true"
			        android:textSize="12sp"
			        android:textColor="#9b9b9b"
			        />
			        
		        <View 
		            android:layout_width="0dp"
		            android:layout_height="0dp"
		            android:layout_weight="1"/>
			        
		        <!-- 조회수 -->
		        <TextView 
		            android:id="@+id/tv_head_viewcnt"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content" 
			        android:textIsSelectable="true"
			        android:text="120"
			        android:gravity="right"
			        android:textSize="12sp"
			        android:textColor="#ea3f03"
			        android:textStyle="bold"
			        />
		    </LinearLayout>
	    </LinearLayout>
   	</LinearLayout>
   	<View
     	android:layout_width="match_parent"
     	android:layout_height="0.7dp"
     	android:layout_marginTop="3dp"
     	style="?detailContentLine"
      	/>
